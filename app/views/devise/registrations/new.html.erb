<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      新規ユーザー登録
    </h1>
  </div>

  <%= render 'devise/shared/error_messages', model: f.object %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">店名</label>
    </div>
    <%= f.text_field :name, class:"input-default", id:"name", placeholder:"例) 〇〇駅前店", maxlength:"30", :size=>"40" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">PCメールアドレス</label>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true, :size=>"40" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード※英数字混合6字以上</label>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字", :size=>"40" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)※英数字混合6字以上</label>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい", :size=>"40" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">釣銭設定額</label>
    </div>
    <%= f.text_field :amount, class:"input-default", id:"amount", placeholder:"例)12万円の場合[120000]", maxlength:"6", :size=>"40" %>
  </div>
  <div class='register-btn'>
    <%= f.submit "ユーザー登録" ,class:"register-red-btn" %>
  </div>
</div>
<% end %>